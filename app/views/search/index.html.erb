<section class='search-section'>
  <div class='text-center titles-with-yellow'>
    <h1>Search</h1>
  </div>
  <div class='container'>
    <div class='text-center search-bar'>
      <%= form_tag search_path, method: :get  do %>
        <div class="inner-addon right-addon">
          <i class="glyphicon glyphicon-search"></i>
          <%= text_field_tag :q, params[:q], class: 'form-control' %>
        </div>
      <% end %>
    </div>
  </div>



  <% if @results && !@results.items.empty? %>
    <div class='container'>
        <h6 style="margin:20px 0 30px 40px"> 共<%= @results.count %>条记录，前三条记录为:</h6>

        <ul style="list-style-type:none">
          <li>
            <h6><%=  @results.items.first.htmlTitle.html_safe %></h6>
            <p><%= link_to @results.items.first.link %> </p>
          </li>
          <li>
            <h6><%=  @results.items.second.htmlTitle.html_safe %></h6>
            <p><%= link_to @results.items.second.link %> </p>
          </li>
          <li>
            <h6><%=  @results.items.third.htmlTitle.html_safe %></h6>
            <p><%= link_to @results.items.third.link %> </p>
          </li>
        </ul>
    </div>

  <% else %>
    <h6 style="margin:20px 0 30px 40px">No results</h6>
  <% end %>


</section>
